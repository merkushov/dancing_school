<div class="page-heading">
  <div class="media clearfix">
    <div class="media-left pr30">
      <% img_num = @customer.gender == 'w' ? '05' : '08' %>
      <img src="/avatar-placeholder-<%= img_num %>.png" width="165" height="165" alt="..." class="media-object mw150">
    </div>
    <div class="media-body va-m">

      <h2 class="media-heading"><%= @customer.full_name %><small></small></h2>
      <p class="lead"></p>
      

      <!-- <div class="col-md-8"> -->
        <div class="row">
          <div class="col-md-6">
            <label class="field-label">Телефон (моб.)</label>
          </div>
          <div class="col-md-6"><%= number_to_phone( @customer.phone_mobile, area_code: true ) %></div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label class="field-label">Email</label>
          </div>
          <div class="col-md-6"><%= @customer.email %></div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label class="field-label">Заметки</label>
          </div>
          <div class="col-md-6"><%= @customer.description %></div>
        </div>
      <!-- </div> -->

    </div>
  </div>
</div>